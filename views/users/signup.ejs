<% layout("./layouts/boilerplate") %>
<div class="row">
    <h1 class="col-6 offset-3" >Signup on Wanderlust</h1>
    <div class="col-6 offset-3" >
        <form action="/signup" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lebel">username</label>
                <input  type="text" name="username" class="form-control" id="username" required>
                <div class="valid-feedback">username Looks good!</div>
                <div class="invalid-feedback">Please enter valid title</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lebel">Email Id </label>
                <input  type="email" name="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lebel">password</label>
                <input  type="password" name="password" class="form-control" id="password" required>
            </div>
            
            <button class="btn btn-primary">signup</button>
            
        </form>
        <form method="get" action="/login">
            <a href="/login" >already have account</a>
        </form>
    </div>
</div>