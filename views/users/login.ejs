<% layout("./layouts/boilerplate") %>
<div class="row">
    <h1 class="col-6 offset-3" >Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lebel">username</label>
                <input  type="text" name="username" class="form-control" id="username" required>
                <div class="valid-feedback">username Looks good!</div>
                <div class="invalid-feedback">Please enter valid title</div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-lebel">password</label>
                <input  type="password" name="password" class="form-control" id="password" required>
            </div>
            
            <button class="btn btn-primary">login</button>
        
        </form>
    </div>
</div>